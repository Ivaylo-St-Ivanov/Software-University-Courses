<main>
    <form action="/cats/delete/{{data-id}}" method="post" class="cat-form">
        <h2>Shelter the cat</h2>
        <img src="{{img}}" alt="">
        <label for="name">Name</label>
        <input type="text" id="name" value="{{title}}" disabled>
        <label for="description">Description</label>
        <textarea id="description"
            disabled>{{description}}</textarea>
        <label for="group">Breed</label>
        <select id="group" disabled>
            <option value="Fluffy Cat">{{breed}}</option>
        </select>
        <button>SHELTER THE CAT</button>
    </form>
</main>